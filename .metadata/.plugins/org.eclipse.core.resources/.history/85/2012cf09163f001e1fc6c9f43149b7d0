package a15Variables;

		/*
		 * Local variables vitini method level lo create chaiyali. 
		 */

public class dStudent_localVariables {
	
	public static void main(String[] args) {
		
		//System.out.println(height); 
		/*
		 * aa height ekada print chestea error vastadi ndukantea e statement tarvatea manam height 
		   aneadi initialize cheasamu kabati, aa initialize cheasi tartvata print chestea em error radu.
		   
		 * e local variable ni malli inko method lo call chestea error vastadi.
		 * e local variable ki static aneadi evakudai error vastadi.
		 */ 
		
		int height = 70;
		System.out.println(height);
		
	}
	
	public static void test()
	{
		//System.out.println(height); //e local variable ni malli inko method lo call chestea error vastadi.
	}
}
